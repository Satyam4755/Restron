<form action="/" class="search-bar-form" method="get" id="search-bar" >

    <!-- 🔍 Category Search -->
    <div style="position: relative; flex: 1;">
        <input type="text" name="category" placeholder="🔍 Search Categories..." id="category-search" autocomplete="off"
            value="<%= typeof selectedCategory !== 'undefined' ? selectedCategory : '' %>"
            oninput="filterDropdown('category')" onfocus="showDropdown('category')"
            style="width: 100%; padding: 10px; border: 1px solid #ccc; border-top-right-radius: 0px; border-bottom-right-radius: 0px;" />

        <!-- 🔽 Category Dropdown -->
        <div id="category-dropdown"
            style="position: absolute; top: 42px; left: 0; right: 0; z-index: 10; background: white; border: 1px solid #ccc; display: none;">
            <% availableCategories.forEach(category=> { %>
                <div class="dropdown-item category-item" onclick="selectDropdownValue('category', '<%= category %>')"
                    style="padding: 8px 14px; cursor: pointer;">
                    <%= category %>
                </div>
                <% }) %>

        </div>
    </div>
 
    <!-- 📍 Location Search -->
    <div style="position: relative; flex: 1;">
        <input type="text" name="location" placeholder="📍 Location" id="location-search" autocomplete="off"
            value="<%= typeof searchLocation !== 'undefined' ? searchLocation : '' %>"
            oninput="filterDropdown('location')" onfocus="showDropdown('location')"
            style="width: 100%; padding: 10px; border: 1px solid #ccc; border-top-left-radius: 0px; border-bottom-left-radius: 0px;" />

        <!-- 🔽 Location Dropdown -->
        <div id="location-dropdown"
            style="position: absolute; top: 42px; left: 0; right: 0; z-index: 10; background: white; border: 1px solid #ccc; display: none;">
            <% availableLocations.forEach(loc=> { %>
                <div class="dropdown-item location-item" onclick="selectDropdownValue('location', '<%= loc %>')"
                    style="padding: 8px 14px; cursor: pointer;">
                    <%= loc %>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- 🔎 Search Button -->
    <button type="submit" id="search-btn" style="padding: 10px 18px; color: white; border: none; cursor: pointer;">
        🔍
    </button>
</form>

