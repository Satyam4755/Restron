<%-include('../partials/head')%>
<%-include('../partials/background')%>
    
<style>
    #search-btn{
        display: none;
    }
    h1, h2 {
        text-align: center;
        color: #4a148c;
        margin-bottom: 20px;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px;
        gap: 20px;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        background: linear-gradient(to bottom, #ffffff, #f8bbd0);
        width: 320px;
        overflow: hidden;
        position: relative;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        animation: fadeIn 0.6s ease-in-out;
    }

    .card:hover {
        transform: translateY(-15px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.3);
    }

    .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 15px 15px 0 0;
        transition: transform 0.4s ease;
    }

    .card:hover img {
        transform: scale(1.1);
    }

    .card .content {
        padding: 20px;
        text-align: center;
    }

    .card h3 {
        margin: 10px 0;
        color: #880e4f;
        font-size: 1.5rem;
    }

    .card p {
        margin: 5px 0;
        color: #6a1b9a;
        font-size: 1rem;
    }

    .card button {
        background-color: #d81b60;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 25px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .card button:hover {
        background-color: #ad1457;
        transform: scale(1.1);
    }

    .card h3.booked {
        position: absolute;
        top: 10px;
        left: 10px;
        color: #ffffff;
        font-weight: bold;
        background-color: #d81b60;
        padding: 5px 15px;
        border-radius: 25px;
        font-size: 0.9rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }

    h1, h2 {
        animation: bounce 1s ease-in-out;
    }
    .badaDabba{
        margin-bottom: 15%;
    }
</style>

<% if (messages.success && messages.success.length > 0) { %>
  <script>
    alert("<%= messages.success[0] %>");
  </script>
<% } %>
<%-include('../partials/nav')%>
<h2 style=" color: #d81b60; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); margin-bottom: 30px; animation: bounce 7.5s infinite;">
    üå∏ Your Ordered Item üå∏
</h2>


<div class="badaDabba">

<div class="cards-container">
    <% venders.forEach(vender => { %>
        <div class="card">
            <img src="<%= vender.image %>" alt="vender Image">
            <div class="content">
                <h3><%= vender.Name %></h3>
                <p><strong> ‚Çπ<%= vender.Price %></strong></p>
                <p><strong>‚≠êÔ∏è</strong>
                    <% const fullStars=Math.floor(vender.averageRating || 0);
                    %>
                
                    <% for(let i=0; i < fullStars; i++) { %> ‚≠ê <% } %>
                    <span style="margin-left: 5px; font-weight: 700;color: red; ">
                        (<%= vender.averageRating || 0 %>/5)
                    </span>
                </p>
                <h3 class="booked">ORDERED</h3>

                <form id="Cancel" action="/user/cancel_booking/<%= vender._id %>" method="post" style="margin-top: 10px;">
                    <button onclick="loading()">Cancel</button>
                </form>
            </div>
        </div>
    <% }) %>
</div>
</div>
  <%-include('../partials/loading')%>
  <%-include('../partials/footer')%>
</body>
</html>
